		"link": "https://dorar.net/hadith/sharh/8714",
		"section": "hadith05",
		"answers": [
			{
				"answer": "تَتكبَّرُ وتَأنَفُ",
				"t": 1,
				"audio": "/files/quiz/hadith/hadith05/audio/answers/3557_Answer.mp3"
			},
			{
				"answer": "تُزَيَّنُ لعُرْسِها",
				"t": 0
			},
			{
